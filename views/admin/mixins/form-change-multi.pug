mixin form-change-multi(action,options)
  form(
    action=action
    method="POST"
    form-change-multi
  ) 
    .d-flex.align-items-start
      .form-group
        select(name="type" class="form-select")
          each item, index in options
            option(value=item.value) #{item.title}
      .form-group
        input(
          type="text"
          name="ids"
          value=""
          class="form-control d-none"
        )
      button(type="submit" class="btn btn-primary ms-1 btn-sm") Áp dụng